FROM mcr.microsoft.com/dotnet/aspnet:8.0 AS base
WORKDIR /app
EXPOSE 80

FROM mcr.microsoft.com/dotnet/sdk:8.0 AS build
WORKDIR /src

COPY HackatonFiapNETT6.AgendaMedica.Services.Consulta.API/HackatonFiapNETT6.AgendaMedica.Services.Consulta.API.csproj ./
RUN dotnet restore

COPY . ./
RUN dotnet publish -c Release -o /app/publish

FROM base AS final
WORKDIR /app
COPY --from=build /app/publish .
ENTRYPOINT ["dotnet", "HackatonFiapNETT6.AgendaMedica.Services.Consulta.API.dll"]
